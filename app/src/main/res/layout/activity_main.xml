        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldDate" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupNatureza" />

        <RadioGroup
            android:id="@+id/radioGroupNatureza"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <RadioButton
                android:id="@+id/radioBtnReceita"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/radioBtnReceita"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioBtnDespesa"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/radioBtnDespesa"

                android:layout_weight="1"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <RadioButton
                android:id="@+id/radioBtnCategoria1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_1" />

            <RadioButton
                android:id="@+id/radioBtnCategoria2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_2" />

            <RadioButton
                android:id="@+id/radioBtnCategoria3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_3" />

            <RadioButton
                android:id="@+id/radioBtnCategoria4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_4" />

            <RadioButton
                android:id="@+id/radioBtnCategoria5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoria_5" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupCategoria" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:hint="@string/editTextDescricao" />

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/salvar_lancamento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescricao" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>