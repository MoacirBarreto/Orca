<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomizacaoActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarCustom"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
        app:titleTextColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/textTituloLancamento"
        style="@style/Label.Orca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/textTituloCustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCustom" />

    <!--
        ===== OTIMIZAÇÃO 1: CAMPO 'DIA DE INÍCIO' =====
        O TextView do rótulo foi removido.
        O 'hint' do TextInputLayout agora serve como o rótulo, com a animação de flutuar.
    -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCustomDia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textViewCustomDia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloLancamento">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCustomDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            tools:text="10" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewCategoriasLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/textViewCategoriasLabel"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldCustomDia" />

    <!-- Categoria 1 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCat1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textFieldCat1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategoriasLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="25" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCat2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textFieldCat2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldCat1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="25" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 3 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCat3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textFieldCat3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldCat2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCat3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="25" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 4 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCat4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textFieldCat4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldCat3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCat4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="25" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categoria 5 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldCat5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/textFieldCat5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldCat4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCat5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="25" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- ===== OTIMIZAÇÃO 2: BOTÕES ALINHADOS AO FINAL DA TELA ===== -->
    <Button
        android:id="@+id/buttonCustomSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/buttonSalvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCustomLimpar" />

    <Button
        android:id="@+id/buttonCustomLimpar"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/buttonLimpar"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCustomSalvar"
        app:layout_constraintEnd_toStartOf="@+id/buttonCustomSalvar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonCustomSalvar" />

</androidx.constraintlayout.widget.ConstraintLayout>
